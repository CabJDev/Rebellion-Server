@page
@model IndexModel
@{
	ViewData["Title"] = "Rebellion";
}

<!DOCTYPE html>

<html>
	<head>
		<title>Rebellion</title>
		<link rel="stylesheet" href="~/css/index.css">
	</head>
	<body>
		<h1>Rebellion</h1>
		<p id="error"></p>
		<div class="form-container">
			<form method="post">
				<fieldset>
					<div>
						<label for="LobbyCode">Lobby Code:</label>
						<input type="text" id="lobbyCode" value="" autocomplete="off" />
					</div>
					<div>
						<label for="Name">Name:</label>
						<input type="text" id="name" value="" autocomplete="off" />
					</div>
					<div>
						<label>&nbsp;</label>
						<input type="submit" id="submitButton" class="submit" />
					</div>
				</fieldset>
			</form>
		</div>
	</body>
</html>

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/clienthub.js"></script>
<script src="~/js/index.js"></script>